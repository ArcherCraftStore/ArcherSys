<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>false</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*apps2_games_score</name>
		<declaration>
			<field>
				<name>uid</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>game_id</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>63</length>
			</field>
			<field>
				<name>author</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>64</length>
			</field>
			<field>
				<name>level</name>
				<type>integer</type>
				<default></default>
				<notnull>true</notnull>
				<length>2</length>
			</field>
			<field>
				<name>json</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>255</length>
			</field>
			<index>
				<name>pkApps2_games_score</name>
				<primary>true</primary>
				<unique></unique>
				<field>
					<name>uid</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>game_id</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>author</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>level</name>
					<sorting>ascending</sorting>
				</field>
			</index>
			<index>
				<name>idxApps2_games_score_game_id</name>
				<primary>false</primary>
				<unique>false</unique>
				<field>
					<name>game_id</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>author</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>level</name>
					<sorting>ascending</sorting>
				</field>
			</index>
		</declaration>
	</table>
	<table>
		<name>*dbprefix*apps2_games_map</name>
		<declaration>
			<field>
				<name>game_id</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>63</length>
			</field>
			<field>
				<name>author</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>63</length>
			</field>
			<field>
				<name>map_id</name>
				<type>integer</type>
				<default></default>
				<notnull>true</notnull>
				<length>63</length>
			</field>
			<field>
				<name>json</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>10240</length>
			</field>
			<field>
				<name>jsol</name>
				<type>text</type>
				<default></default>
				<notnull>false</notnull>
				<length>10240</length>
			</field>
			<index>
				<name>pkApps2_games_map</name>
				<primary>true</primary>
				<unique></unique>
				<field>
					<name>game_id</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>author</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>map_id</name>
					<sorting>ascending</sorting>
				</field>
			</index>
		</declaration>
	</table>
</database>
