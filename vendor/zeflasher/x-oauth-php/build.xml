<?xml version="1.0" encoding="UTF-8"?>
<project name="X-OAuth-PHP" basedir="./">

    <property file="./build.properties" />

    <target name="php-documentation" description="Generates phpDocumentor docs">
        <delete dir="${phpdoc.dir}" />
        <mkdir dir="${phpdoc.dir}" />
        <exec executable="${php.bin}" dir="${basedir}" />
        <delete dir="${phpdoc.dir}-tmp" />
   </target>
</project>
